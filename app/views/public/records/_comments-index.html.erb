<p id="comment_count">コメント件数：<%= record.post_comments.count %></p>

<% record.post_comments.each do |post_comment| %>
  <di>
    <%= post_comment.user.name %>さん<%= post_comment.created_at.strftime('%Y/%m/%d') %>
  </div>
  <%= post_comment.comment %>
    <% if post_comment.user == current_user %>
    <div class="comment-delete">
      <%= link_to "削除", record_post_comment_path(post_comment.record, post_comment), method: :delete, remote: true %>
    </div>
    <% end %>
<% end %>