  <% if @record.errors.any? %>
    <% unless @record.valid? %>
      <ul>
        <% @record.errors.full_messages_for(:end).each do |error| %>
          <li>
            <%#= error %>
          </li>
        <% end %>
      </ul>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2>記録の追加</h2>
      <%= form_with model: @record, url: user_record_add_path(user_id: current_user), method: :post, local:true do |record| %>
      <div>
        <%= record.label:"カテゴリー" %>
        <%= record.select:name, @category_names%>
        <%= record.label:"カテゴリーの色" %>
        <%= record.select:color, [ ['赤',1], ['青',2],['黄緑',3], ['緑',4],['紫',5], ['黄',6],['橙',7], ['灰',8]]%>
      </div>
      <div>
        <%= record.label:"開始時刻" %>
        <%= record.datetime_select:start %>
        <%= record.label:"終了時刻" %>
          <%= record.datetime_select:end %>
      </div>
      <div>
        <%= record.submit "記録を追加する" , class:"btn btn-success btn-customer_edit" %>
        <%= link_to "戻る", :back, class: "btn btn-info" %>
      </div>
      <% end %>
    </div>
  </div>
</div>