<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="marker">ユーザー情報編集</h2>
      <%= form_with model: @user, local:true do |user| %>
        <table class="user-edit">
            <tbody>
              <tr>
                  <td><%= user.label :"氏名" %></td>
                  <td><%= user.text_field :name  , class:"form-control name" %></td>
              </tr>
              <tr>
                  <td><%= user.label :"メールアドレス" %></td>
                  <td><%= user.text_field :email, class:"form-control email" %></td>
                  <td><%= user.label :"アイコン画像" %></td>
                  <td><%= user.attachment_field :image, class:"form-control image" %></td>
                  <td><%= user.submit '編集内容を保存', class:"btn btn-success btn-user_edit" %></td>
                  <td><%= link_to "退会する", user_quit_path, class:"btn btn-danger btn-user_quit" %></td>
              </tr>


            </tbody>
        </table>
        <% end %>
    </div>
  </div>
</div>