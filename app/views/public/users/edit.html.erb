<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2>ユーザー情報編集</h2>
      <%= form_with model: @user, local:true do |user| %>
        <div>
          <%= user.label :"氏名" %>
          <%= user.text_field :name  , class:"form-control name", class: "input-small"%>
          <%= user.label :"メールアドレス" %>
          <%= user.text_field :email, class:"form-control email", class: "input-small"%>
          <%= user.label :"アイコン画像" %>
          <%= user.attachment_field :image, class:"form-control image", class: "input-small"%>
        </div>
        <div>
          <%= user.submit '編集内容を保存', class:"btn btn-success" %>
          <%= link_to "退会する", users_quit_path, class:"btn btn-danger" %>
          <%= link_to "戻る", :back, class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>