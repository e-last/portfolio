<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="marker">学習記録一覧</h2>
      <table class="table"  style= "width: 900px;margin: 0 auto;">
        <thead style= "background: lightgray;">
          <tr>
            <th><%= sort_order "user_id", "ユーザー名" %></th>
            <th><%= sort_order "name", "カテゴリー名" %></th>
            <th><%= sort_order "hour", "学習時間" %></th>
            <th><%= sort_order "start", "学習開始時間" %></th>
            <th>学習終了時間</th>
            <th>コメント数</th>
            <th></th>
          </tr>
        </thead>
        <tbody style= "background-color: rgb(255, 255, 255);">
          <% @records.each do |record| %>
          <tr>
            <td><%= record.user.name %></td>
            <td class="color_<%= record.color %>"><%= record.name %></td>
            <td>
              <% if !(record.end.nil?) %>
                <%= minute(record.hour) %>
              <% end %>
            </td>
            <td><%=l record.start %></td>
            <td>
              <% if !(record.end.nil?) %>
                <%=l record.end %>
              <% end %>
            </td>
            <td><p><%= "#{record.post_comments.count} コメント" %></p></td>
            <td><%= link_to "詳細",admin_record_path(record), class:"btn btn-success btn-customer_edit" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @records %>
    </div>
  </div>
</div>