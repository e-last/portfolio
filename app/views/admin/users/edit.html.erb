<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2><%= @user.name %>さんのユーザー情報編集</h2>
      <%= form_with model: @user, url: admin_user_path, local:true do |user| %>
      <div>
        <%= user.label :"ユーザーID:" %>
        <%= user.label :"#{@user.id}" %>
      </div>
      <div>
        <%= attachment_image_tag @user, :image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %>
        <%= user.label :"名前" %>
        <%= user.text_field :name, class: "input-small" %>
        <%= user.label :"メールアドレス" %>
        <%= user.text_field :email, class: "input-small" %>
      </div>
      <div>
        <%= user.label :"会員ステータス"%>
    　   <%= user.radio_button :is_valid, true %><%= user.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %>
    　   <%= user.radio_button :is_valid, false %><%=user.label :is_valid, "退会", {value: :false, style: "display: inline-block;"} %>
  　   </div>
  　   <div>
    　   <%= user.submit "変更を保存", class: "btn btn-success" %>
    　   <%= link_to "戻る", :back, class: "btn btn-info" %>
  　   </div>
      <% end %>
    </div>
  </div>
</div>