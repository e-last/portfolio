<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="marker">ユーザー一覧</h2>
      <table class="table" style= "width: 900px;margin: 0 auto;">
        <thead style="background: lightgray;">
          <tr>
            <th>ユーザーID</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to admin_user_path(user) do %>
                <%= user.name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_valid == false%>
                <p><i class="text-secondary"></i>退会</p>
              <% else %>
                <p><i class="text-success"></i>有効</p>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <%= paginate @users %>
    </div>
  </div>
</div>